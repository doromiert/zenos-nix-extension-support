{
    "scopeName": "zen-nix.injection",
    "injectionSelector": "L:source.nix, L:source.zen-nix",
    "patterns": [
        {
            "match": "(?<![a-zA-Z0-9])(_[a-zA-Z0-9_-]+)",
            "name": "storage.type.zenos"
        },
        {
            "match": "\\$[a-zA-Z_]+",
            "name": "keyword.variable.zenos"
        },
        {
            "match": "(!)\\s*(?=\\{)",
            "name": "keyword.operator.zenos"
        }
    ]
}
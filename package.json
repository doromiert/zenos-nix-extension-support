{
  "name": "zenos-nix-extension-support",
  "displayName": "ZenOS nix extension support",
  "description": "This extension provides support for ZenOS's extensions of the nix language.",
  "version": "0.0.5",
  "publisher": "doromiert",
  "icon": "icon.png",
  "repository": {
    "url": "https://github.com/doromiert/zenos-nix-extension-support"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "extensionDependencies": [
    "bbenoist.Nix"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:zen-nix"
  ],
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "configurationDefaults": {
      "[zen-nix]": {
        "editor.semanticHighlighting.enabled": false
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "storage.type.zenos",
            "settings": {
              "fontStyle": "italic"
            }
          },
          {
            "scope": "keyword.variable.zenos",
            "settings": {
              "fontStyle": "bold italic"
            }
          }
        ]
      }
    },
    "languages": [
      {
        "id": "zen-nix",
        "aliases": [
          "ZenOS-extended Nix",
          "zen-nix"
        ],
        "extensions": [
          ".zstr",
          ".zcfg",
          ".zmdl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zen-nix",
        "scopeName": "source.zen-nix",
        "path": "./syntaxes/zen-nix.tmLanguage.json"
      },
      {
        "scopeName": "zen-nix.injection",
        "path": "./syntaxes/zen-nix-inject.json",
        "injectTo": [
          "source.nix",
          "source.zen-nix"
        ]
      }
    ]
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}
